<%= form_for @article do |f| %>
  <div class="col-xs-2">
    <div class="form-group has-success">
      <%= f.label :image, '画像アップロード' %>
      <%= f.file_field :image, style: 'color:#260980' %>
    </div>
    <div class="form-group has-success">
      <%= f.label :title, 'タイトル' %>
      <%= f.text_field :title, class: 'form-control', placeholder: 'タイトル' %>
    </div>
    <div class="form-group has-success">
      <%= f.label :body, '本文' %>
      <%= f.text_area :body, rows: '5', class: 'form-control', placeholder: '本文' %>
    </div>
    <%= f.submit '投稿', class: 'btn btn-success' %>
  </div>
<% end %> 
