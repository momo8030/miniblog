<div class="container">
  <% @articles.each do |article|%>
    <%= link_to article do %>
      <div class="col-md-3">
        <% if article.image.present? %>
          <%= image_tag(article.image_url) %>
        <% else %>
          <%= image_tag 'niji.jpeg' %>
        <% end %>
        <p><%= article.title %></p>
        <p><%= simple_format article.body %></p>
        <p><%= article.created_at.strftime("%Y年%m月%d日 %H時%M分") %><p>
      </div>
    <% end %>
  <% end %>
</div>